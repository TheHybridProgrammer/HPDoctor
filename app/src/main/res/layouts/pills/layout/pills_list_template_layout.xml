<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/pills_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/pills_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        android:layout_toRightOf="@id/pills_list_checkbox" />

    <TextView
        android:id="@+id/pills_list_quantity"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:inputType="number"
        android:textSize="18dp"
        android:layout_toLeftOf="@+id/pills_list_increment_button" />

    <Button
        android:id="@+id/pills_list_increment_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/pills_list_decrement_button"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="+" />

    <Button
        android:id="@+id/pills_list_decrement_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="-" />

</RelativeLayout>